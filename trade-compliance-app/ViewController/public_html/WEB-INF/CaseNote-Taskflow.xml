<?xml version="1.0" encoding="UTF-8" ?>

<!--T20200701.0024 - OWS - Open case notes page in new tab (IRI)-->
<adfc-config xmlns="http://xmlns.oracle.com/adf/controller" version="1.2">
  <task-flow-definition id="CaseNote-Taskflow">
    <default-activity>RouteRequest</default-activity>
    <data-control-scope>
      <shared/>
    </data-control-scope>
    <managed-bean id="__6">
      <managed-bean-name>CaseNotesBean</managed-bean-name>
      <managed-bean-class>oracle.apps.xwrl.beans.backing.CaseNotes</managed-bean-class>
      <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <initializer>#{viewScope.CaseNotesBean.onLoad}</initializer>
    <view id="EnterIndividualCaseNote">
      <page>/Prototype/EnterIndividualCaseNote.jsff</page>
    </view>
    <view id="EnterEntityCaseNote">
      <page>/Prototype/EnterEntityCaseNote.jsff</page>
    </view>
    <router id="RouteRequest">
      <case id="__1">
        <expression>#{pageFlowScope.Type=='ENTITY'}</expression>
        <outcome>Env</outcome>
      </case>
      <case id="__2">
        <expression>#{pageFlowScope.Type=='INDIVIDUAL'}</expression>
        <outcome>Inv</outcome>
      </case>
      <default-outcome>Inv</default-outcome>
    </router>
    <control-flow-rule id="__3">
      <from-activity-id>RouteRequest</from-activity-id>
      <control-flow-case id="__4">
        <from-outcome>Inv</from-outcome>
        <to-activity-id>EnterIndividualCaseNote</to-activity-id>
      </control-flow-case>
      <control-flow-case id="__5">
        <from-outcome>Env</from-outcome>
        <to-activity-id>EnterEntityCaseNote</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <use-page-fragments/>
  </task-flow-definition>
</adfc-config>
