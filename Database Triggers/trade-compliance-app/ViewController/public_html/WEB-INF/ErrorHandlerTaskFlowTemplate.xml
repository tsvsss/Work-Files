<?xml version="1.0" encoding="UTF-8" ?>
<adfc-config xmlns="http://xmlns.oracle.com/adf/controller" version="1.2">
  <task-flow-template id="ErrorHandlerTaskFlowTemplate">
    <default-activity>ErrorHandler</default-activity>
    <data-control-scope>
      <shared/>
    </data-control-scope>
    <managed-bean id="__1">
      <managed-bean-name>ErrorHandler</managed-bean-name>
      <managed-bean-class>oracle.apps.xwrl.view.utils.ErrorHandler</managed-bean-class>
      <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <exception-handler>ErrorHandler</exception-handler>
    <method-call id="ErrorHandler">
      <method>#{viewScope.ErrorHandler.controllerExceptionHandler}</method>
    </method-call>
    <view id="Error">
      <page>/Error.jsf</page>
    </view>
    <control-flow-rule id="__2">
      <from-activity-id>ErrorHandler</from-activity-id>
      <control-flow-case id="__3">
        <from-outcome>Error</from-outcome>
        <to-activity-id>Error</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
  </task-flow-template>
</adfc-config>
